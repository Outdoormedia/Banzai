  %body

    = render '/shared/header'
    
    .container
    
      %section#content
  
        = yield

      %section#sidebar
        %section#recent_activity
          %header
            %h1.ir#recent_activity 
              Happenings
              = render '/shared/recent_activity'
              

    = render '/shared/footer'