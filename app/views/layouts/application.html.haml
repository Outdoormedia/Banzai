    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"
    = javascript_include_tag "http://explorercanvas.googlecode.com/svn/trunk/excanvas.js"

    = csrf_meta_tag
