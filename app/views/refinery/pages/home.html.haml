- currently_at @page.slug

=raw @page.content_for(:body)
.container
  .sixteen.columns
    #upper_page_content.row
      %section#carousel_content.ten.columns.alpha
        .carousel
          - if @carousel.present?
            = image_tag @carousel.photo.image.url, :alt => "Carousel image"
          - else
            = image_tag 'oma_placeholder.png', :alt => "Carousel image"
      %section#pie_content.six.columns.omega
        = raw @page.content_for(:pie)
        %canvas#chart{:height => '300px'}= render '/shared/pieChart'

    #lower_page_content.row
      .one-third.columns.alpha#welcome_content= raw @page.content_for(:welcome)
      .one-third.columns#news_content= raw @page.content_for(:news)
      .one-third.columns.omega#studies_content= raw @page.content_for(:studies)
