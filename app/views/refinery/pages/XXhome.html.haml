- currently_at @page.slug

%content
  %section.oma_home_page_content
    =raw @page.content_for(:body)

    %section.oma_home_page_upper_panel
      =raw @page.content_for(:carousel)
      %section#piechart_content
        /=raw @page.content_for(:pieChart)
        - if ["home", "buy", "learn", "plan" ].include?(@page.slug)
          %canvas#chart( height = '300px')
            = render 'shared/pieChart'

    %section#lower_page
      %section#welcome
        =raw @page.content_for(:side_body)
        %section#sidebar
          %section#recent_activity
            %header
              %h1.ir#recent_activity 
                = render '/shared/recent_activity'
   
   
    %section#welcome_content
      =raw @page.content_for(:welcome)
   
    %section#news_content
      =raw @page.content_for(:news)
   
    %section#news_studies
      =raw @page.content_for(:studies)
