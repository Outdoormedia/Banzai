<% content_for :body_content_title do %>
  <%= @plan_by_format.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @plan_by_format.name %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="plan_by_formats">
      <% @plan_by_formats.each do |plan_by_format| %>
        <li>
          <%= link_to plan_by_format.name, refinery.plan_by_formats_plan_by_format_path(plan_by_format) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
