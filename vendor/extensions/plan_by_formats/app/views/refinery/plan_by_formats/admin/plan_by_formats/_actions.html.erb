<ul>
  <% if ::Refinery::PlanByFormats::Admin::PlanByFormatsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.plan_by_formats_admin_plan_by_formats_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_plan_by_formats_admin_plan_by_format_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::PlanByFormats::Admin::PlanByFormatsController.sortable? && ::Refinery::PlanByFormats::PlanByFormat.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Plan By Formats"),
                 refinery.plan_by_formats_admin_plan_by_formats_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Plan By Formats"),
                 refinery.plan_by_formats_admin_plan_by_formats_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
