<% content_for :body_content_title do %>
  <%= @calendar.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @calendar.title %>
    </p>
  </section>
  <section>
    <h1>When</h1>
    <p>
      <%=raw @calendar.when.strftime("%A, %d %B, %Y") %>
    </p>
  </section>
  <section>
    <h1>Where</h1>
    <p>
      <%=raw @calendar.where %>
    </p>
  </section>
  <section>
    <h1>Sponsor</h1>
    <p>
      <%=raw @calendar.sponsor %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @calendar.description %>
    </p>
  </section>
  <section>
    <h1>Url</h1>
    <p>
      <%=raw @calendar.url %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="calendars">
      <% @calendars.each do |calendar| %>
        <li>
          <%= link_to calendar.title, refinery.calendars_calendar_path(calendar) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
