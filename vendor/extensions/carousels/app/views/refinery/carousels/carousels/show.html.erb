<% content_for :body_content_title do %>
  <%= @carousel.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @carousel.name %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @carousel.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Blurb</h1>
    <p>
      <%=raw @carousel.blurb %>
    </p>
  </section>
  <section>
    <h1>Contributor</h1>
    <p>
      <%=raw @carousel.contributor %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="carousels">
      <% @carousels.each do |carousel| %>
        <li>
          <%= link_to carousel.name, refinery.carousels_carousel_path(carousel) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
