<% content_for :body_content_title do %>
  <%= @snapshot.reaches_1 %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Market</h1>
    <p>
      <%=raw @snapshot.market %>
    </p>
  </section>
  <section>
    <h1>Demog</h1>
    <p>
      <%=raw @snapshot.demog %>
    </p>
  </section>
  <section>
    <h1>Format</h1>
    <p>
      <%=raw @snapshot.format %>
    </p>
  </section>
  <section>
    <h1>Number Of Days 1</h1>
    <p>
      <%=raw @snapshot.number_of_days_1 %>
    </p>
  </section>
  <section>
    <h1>Number Of Days 2</h1>
    <p>
      <%=raw @snapshot.number_of_days_2 %>
    </p>
  </section>
  <section>
    <h1>Reaches 1</h1>
    <p>
      <%=raw @snapshot.reaches_1 %>
    </p>
  </section>
  <section>
    <h1>Reaches 2</h1>
    <p>
      <%=raw @snapshot.reaches_2 %>
    </p>
  </section>
  <section>
    <h1>X Labels</h1>
    <p>
      <%=raw @snapshot.x_labels %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="snapshots">
      <% @snapshots.each do |snapshot| %>
        <li>
          <%= link_to snapshot.reaches_1, refinery.snapshots_snapshot_path(snapshot) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
